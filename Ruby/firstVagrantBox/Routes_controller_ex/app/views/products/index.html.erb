<h1>Listing Products</h1>
<table>
  <thead>
    <tr>
      <td>Name</td>
      <td>Description</td>
      <td>action</td>
    </tr>
  </thead>
  <tbody>
  <% @products.each do |product| %>
    <tr>
      <td> <a href="products/<%= product.id %>"><%= product.name %></a> </td>
      <td><%= product.description %></td>
      <td> <a href="products/<%= product.id %>" data-method="delete">Delete</a></td>
    </tr>
  <% end %>
  </tbody>
</table>

